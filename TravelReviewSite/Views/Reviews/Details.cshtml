@model TravelReviewSite.Models.Review

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>



@* Basic thumbnail that showcases the details of the specific review *@
<div class="row">
    <div class="col-xs-6 col-md-8" id="dethumbs">
        <a href="#" class="thumbnail"></a>
           <h3>@Html.DisplayFor(modelItem => Model.Title)</h3>
        <h5>@Html.DisplayFor(model => model.Category)</h5>
            <p>@Html.DisplayFor(model => model.Content)<br />@Html.DisplayFor(model => model.PubDate)</p>
        <p2>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Back to List", "Index")
        </p2>
    </div>
</div>